<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FoodDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/food_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Food Name"
            android:textSize="30dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/calorie_layout"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/food_name"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/calories_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Calories"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/calories_count_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/calories_display"
                android:text="---"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@id/calorie_layout"
            android:background="@color/colorAccent" />


        <LinearLayout
            android:id="@+id/nutrition_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/calorie_layout"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/protein_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/proteins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Proteins"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/proteins_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="---"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/carbs_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/protein_layout"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Carbs"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/carbs_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="---"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vitamins_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/protein_layout"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/vitamins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Vitamins"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/vitamins_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="---"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fats_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/protein_layout"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/fats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Fats"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/fats_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="---"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <Button
                android:id="@+id/add_meal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorAccent"
                android:text="Add"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>