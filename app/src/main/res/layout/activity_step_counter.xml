<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Activities.StepCounterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/step_bar"
            layout="@layout/app_bar"/>

        <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/step_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Today"
            android:textColor="@android:color/black"
            android:textSize="20dp"
             />


        <TextView
            android:id="@+id/step_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/today"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="0000"
            android:textColor="@color/colorAccent"
            android:textSize="75dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/step_counter"
            android:layout_centerHorizontal="true"
            android:text="Steps"
            android:textColor="@android:color/black"
            android:textSize="20dp" />



        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@id/steps"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent" />


        <Spinner
            android:id="@+id/step_spinner"
            android:layout_width="376dp"
            android:layout_height="48dp"
            android:layout_below="@id/steps"
            android:layout_margin="20dp"
            android:layout_marginStart="20dp"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />


        <Button
            android:id="@+id/total_steps_counter"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@id/step_spinner"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/white"
            android:text="0000"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_steps"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_steps_counter"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Steps"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/black"
            android:textSize="20dp" />



    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>