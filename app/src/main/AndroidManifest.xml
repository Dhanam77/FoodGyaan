<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodgyan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.RemindersActivity"></activity>
        <activity android:name=".OptimumCalories" />
        <activity android:name=".SetGoalsActivity" />
        <activity android:name=".Activities.FoodDetailsActivity" />
        <activity android:name=".Activities.WaterCounterActivity" />
        <activity android:name=".Activities.StepCounterActivity" />
        <activity android:name=".Activities.ProfileActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.SignUpActivity" />
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity" />
    </application>

</manifest>